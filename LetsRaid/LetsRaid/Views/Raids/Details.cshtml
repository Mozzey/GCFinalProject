@model LetsRaid.Domain.MVCModels.Raid

@{
    ViewBag.Title = "Details";
}

<h2>Group Members</h2>

<div>
    <hr />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Server
                </th>
                <th>
                    Class
                </th>
                <th>
                    Level
                </th>
                <th>
                    Role
                </th>
                <th>
                    Thumbnail
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Characters)
            {
                <tr>
                    <td>
                        @item.CharacterName
                    </td>
                    <td>
                        @item.ServerName
                    </td>
                    <td>
                        @item.GetCharacterClass(item.Class)
                    </td>
                    <td>
                        @item.Level
                    </td>
                    <td>
                        @item.Spec
                    </td>
                    <td>
                        <img src="@ViewBag.Thumbnail@item.Thumbnail" alt="Thumbnail" />
                    </td>
                    <td class="btn btn-default btn-md">
                        @Html.ActionLink("Remove", "RemoveCharacterFromGroup", "Raids",
                   new
                   {
                       raidId = Model.RaidId,
                       id = item.CharacterID

                   },
                   null)
                    </td>




                </tr>

            }
        </tbody>
    </table>
    <p>
        @Html.ActionLink("Minimum Suggested Boss", "SuggestBosses", new { id = Model.RaidId})
    </p>
    <p>
        @Html.ActionLink("Average Suggested Boss", "AverageBoss", new { id = Model.RaidId })
    </p>
    <p>
        @Html.ActionLink("Suggested Challenge Boss", "ChallengeBoss",  new { id = Model.RaidId })
    </p>
</div>
<p>
    @Html.ActionLink("Back to Groups", "Index")
</p>
