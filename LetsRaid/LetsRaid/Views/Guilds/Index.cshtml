@model IEnumerable<LetsRaid.Domain.Models.Guild>

@{
    ViewBag.Title = ViewBag.Server;
}

<div class="mt-3">
    <h2>@ViewBag.Server</h2>

    <h5 class="mt-2 mb-4">Choose a guild which you would like to add players to your group </h5>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        @Html.ActionLink("Select this", "GetMembers", "Guilds", new { serverId = item.ServerId, guildId = item.GuildId, raidId = Request.QueryString["raidId"] }, new { @class = "card-lik btn btn-success" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>


